.pie{
    margin: 0 auto;
    width:350rpx;
    height: 350rpx;
    background: #54c768;
    border-radius: 50%;
    background-image: linear-gradient(to right,transparent 50%,#ffc600 0);
}

.pie2{
    margin: 0 auto;
    width:350rpx;
    height: 350rpx;
    background: #54c768;
    border-radius: 50%;
    background-image: linear-gradient(to right,transparent 50%,#ffc600 0);
}


.pie::before{
    content: '';
    display: block;
    margin-left: 50%;
    height: 100%;
    border-radius: 0 100% 100% 0 / 50%;
    background-color: inherit;
    transform-origin: left;
    transform: rotate(.3turn);
}

.pie2::after{
    content: '';
    display: block;
    margin-left: 50%;
    height: 100%;
    border-radius: 0 100% 100% 0 / 50%;
    background-color:#ffc600 !important;
    transform-origin: left;
    /* transform: rotate(.5turn); */
}

