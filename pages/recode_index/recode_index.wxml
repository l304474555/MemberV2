    <view>
      <view class='dhq_tip_pro_name2' style='color:#d1121a;'>{{counpInfo.MDescription}}</view>
      <view class='dhq_tip_pro_name2' style='color:#d1121a;'>{{counpInfo.SDescription}}</view>
    </view>
  </view>
  <button class='dhq_btn_y' bindtap="closeGetCardInfo" >确定</button>
</view>



