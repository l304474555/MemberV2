<!--兑换成功弹框-->
<view class="modal_bg" hidden='{{!isGetCardInfo}}'></view>
<view class="dhq_modal_fa3" hidden='{{!isGetCardInfo}}'>
  <image src="https://mimage.myj.com.cn/MicroMallFileServer/Files/Coupon/dhm/dh_tip_bg.png" mode="widthFix" style='width:100%; position: relative;'></image>
  <image src="https://mimage.myj.com.cn/MicroMallFileServer/Files/Coupon/dhm/dhq_close.png" mode="widthFix" bindtap="closeGetCardInfo" style='width:24px; position: absolute;top:0px; right:5%;'></image>
