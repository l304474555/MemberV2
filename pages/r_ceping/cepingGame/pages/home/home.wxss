/* pages/cepingGame/pages/home/home.wxss */
.page {
  position: relative;
  width: 100%;
  height: 100%;
}

.bg {
  position: absolute;
  width: 75vw;
  height: auto;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.logo {
  position: absolute;
  right: 50rpx;
  top: 50rpx;
  width: 131rpx;
  height: 35rpx;
}

.start-btn {
  position: absolute;
  left: 50%;
  top: 68%;
  width: 267rpx;
  height: 97rpx;
  transform: translate(-50%, -50%);
  padding: 0 !important;
  border: none !important;
  background-size: 100% 100%;
  background-repeat:no-repeat;
  animation-duration: 2s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

@keyframes scale {
  50% {
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.btns {
  position: absolute;
  width: 80vw;
  left: 10vw;
  bottom: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.btns .btn {
  width: 100rpx;
  height: auto;
}

.lottery-tip {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 68rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #ffe6ea;
  font-size: 26rpx;
}

.lottery-tip .lotteryBtn {
  border-radius: 32rpx;
  padding: 6rpx 20rpx;
  font-weight: bold;
  background-color: #f8cd41;
}

.rule_wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
}

.rule {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  /* top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); */
  height: 70vh;
  width: 80vw !important;
  padding: 0rpx 0rpx 20rpx 0rpx;
  overflow: scroll;
  border: 3px solid;
  border-radius: 30rpx;
  background-color: #fff;
  animation-fill-mode: forwards;
  animation-duration: 1s;
  /* -webkit-overflow-scrolling: touch; 
  overflow-scrolling: touch; */
}

.rule_contain {
  position: relative;
  top: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 499rpx;
  height: 2223rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
}

.rule_close {
  position: absolute;
  right: 125rpx;
  top: 12vh;
  width: 54rpx;
  height: 54rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  transition: opacity 0.5s;
}

.rule_down {
  position: absolute;
  bottom: 15vh;
  left: 50%;
  transform: translate(-50%, 65%);
  width: 54rpx;
  height: 54rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  transition: opacity 0.5s;
}