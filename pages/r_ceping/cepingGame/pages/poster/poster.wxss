/* pages/cepingGame/pages/poster/poster.wxss */
.page {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: rgb(255, 205, 214);
    font-size: 24rpx;
    text-align: center;
}

.title {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 326rpx;
    height: 71rpx;
    line-height: 71rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: bolder;
}

.posterWrapper {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: flex-end;
    width: 657rpx;
    height: 855rpx;
    margin-top: 25rpx;
}

.posterWrapper .des {
    margin: 10rpx;
    color: rgb(214, 38, 90);
}

.poster {
    position: relative;
    height: 741rpx;
    width: 506rpx;
    overflow: hidden;
    border: 10rpx solid #fff;
    background-color: #fff;
}

.bg {
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    /* background-color: transparent; */
    background-color: red;
}

.btns {
    display: flex;
    justify-content: center;
    align-items: top;
    position: relative;
    height: 155rpx;
}

.shareBtn,
.playBtn,
.lotteryBtn {
    width: 216rpx;
    height: 74rpx;
    margin: 0 5rpx;
    background-size: 100% 100%;
}

.copywriting {
    width: 656rpx;
    height: 160rpx;
    margin: 15rpx 0;
    padding: 0 30rpx;
    box-sizing: border-box;
    text-align: left;
    white-space: pre-line;
    font-weight: bolder;
    color: rgb(214, 35, 88);
    line-height: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-size: 100% 100%;
}

.btns .des {
    position: absolute;
    top: 60rpx;
    font-size: 18rpx;
    white-space: pre-line;
    margin-top: 8rpx;
    box-sizing: border-box;
    /* color: rgb(214, 38, 90); */
    color: #fff;
    font-weight: bolder;
}

.btnWrapper {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
}

.tip1 {
    width: 175rpx;
    height: 68rpx;
    padding-top: 15rpx;
}

.tip2 {
    width: 175rpx;
    height: 54rpx;
    padding-top: 21rpx;
}

.posterWrapper .des,
.copywriting,
.editBtns,
.btns {
    transition: all 1s;
}

.editBtns {
    position: absolute;
    left: 50%;
    bottom: 8vh;
    /* transform: translate(-50%, 150%); */
    width: 656rpx;
    height: 207rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.uploadBtn,
.cancalBtn,
.saveBtn {
    width: 119rpx;
    height: 135rpx;
    margin: 10rpx 50rpx 0rpx 50rpx;
    animation: float 1s linear infinite;
}

.uploadBtn {
    animation-delay: 0.2s;
}

.cancalBtn {
    animation-delay: 0s;
}

.saveBtn {
    animation-delay: 0.4s;
}

.logo {
    position: absolute;
    top: 200rpx;
    left: 50%;
    transform: translate(-50%, 80%);
    width: 401rpx;
    height: 31rpx;
}

.click-tip-wrap {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.click-tip-wrap .click-tip {
    animation: jump 1.5s infinite;
}

.animScale {
    animation: animScale 1s linear;
}

@keyframes jump {
    10% {
      transform: translateY(-30%)
    }
    20% {
      transform: translateY(0%)
    }
}

@keyframes animScale {
    0% {
      transform: scale(1)
    }
    50% {
      transform: scale(1.2)
    }
    100% {
      transform: scale(1)
    }
}