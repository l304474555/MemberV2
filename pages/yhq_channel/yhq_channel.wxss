.yhq_fa{  width: 95%; height: auto; margin: 0 auto;}

.yhq_body{ position: relative; background-color:#fff; width: 100%; height: auto; margin-bottom: 10px;}

.yhq_spot{position: absolute; color: #f0eff4; z-index: 998; line-height: 8px; font-size: 8px; left: -3px;}

.yhq_spot2{position: absolute; color: #f0eff4; z-index: 998; line-height: 8px; font-size: 8px; right: -3px; overflow:hidden; height:100%;}

.yhq_spot3{position: absolute; color: #f0eff4; z-index: 999; line-height: 8px; font-size: 18px; right: 14%;top:-3px}

.yhq_spot4{position: absolute; color: #f0eff4; z-index: 999; line-height: 8px; font-size: 18px; right: 14%;bottom:-3px}

.yhq_btn{ float: right; height: 90px; background-color: #ffb71c; width: 65px;text-align: center;}

.yhq_button{ display: inline-block; width:16%; height: 100px;  line-height:normal; border-radius: 0; background-color: #ffb71c; border:0;text-align: center;transform:none !important;vertical-align: middle;
}

.yhq_btn_txt{font-size: 14px; color: #fff; position: absolute;top:50%;margin-top:-27px;right:60%; width: 1%}
.yhq_btn_txt_4{margin-top:-34px;line-height:17px;}
button[class="yhq_button"]::after {
  border: 0;
} 


.yhq_tpye{display: inline-block;width: 18%; height: 18%; margin:10px 10px; vertical-align: middle; }

.yhq_tpye image{width:100% ; height: 100%; border-radius:8px; }

.adimg{height: 150px;width:100%;display:inline-block;overflow:hidden;}

.yhq_value_fa{display: inline-block; width:calc(100% - 34% - 20px);vertical-align: middle;}

.yhq_value{ float: left; width: 100%;}

.yhq_value1{ 
  font-size: 12px; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical;
	word-break: break-all;
  line-height: 18px;
  color:#333333;
}
.yhq_value2{ 
  font-size: 16px; 
  line-height: 18px;
  color:#ffb71b;
}
.yhq_value3{ 
  font-size: 14px; 
  line-height: 18px;
  color:#ffb71b;
  vertical-align: bottom;
  margin-left: 10px;
}

.yhq_red_txt{ color:#d1121a !important; }
.yhq_gray_txt{color:#333333 !important;}
.yhq_bg_red{background-color:#d1121a !important;}
.yhq_bg_gray{background-color:#d0d0d0 !important;}

.yhq_kf{position: fixed;z-index: 999; right:10px; bottom:1%;}
.add_popup{ position: fixed; z-index: 99999; margin: 0 auto; left: 0; right: 0; top:50%; margin-top: -330rpx; text-align: center;}

.add_popup_btn{ position: absolute;z-index: 99999; width: 300rpx; height:100rpx;left: 0;right: 0; bottom: 0; margin: 0 auto;opacity: -1; }

.add_popup_close{position: absolute; top:-15%;right:13%;}
.add_popup_txt{position: absolute; top: 40%; right: 0; left: 0; text-align: center; margin:0 auto; font-size: 25px; color: #fff; font-weight: bold;}



.channelImg {width:25px;height:30px;text-align: center}


