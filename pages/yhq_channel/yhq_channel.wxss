

.title_bg{background-color: #d1121a; height: 40px;position: fixed;z-index: 9999; width: 100%;}

.title_img{ float: left; height: 40px; margin-left: 10px; }


.tab-act{color:#d1121a; border-radius:5px;}
.tab-act .fl_name{color:#d1121a;}
.mtab{position:fixed; top:30px; left:0px; width:100%; background-color:#f0eff4; height:35px; line-height:35px; vertical-align:middle; z-index:9999; padding:0px;}
.mtab .fl{padding:0px; height:32px;}
.mtab .mtab-act{border-bottom:3px solid #d1121a; color:#d1121a;}
