
page{min-height: auto; background-color: #d1121b}

.jf_fa{
margin:10px;padding:10px 10px 30px 10px; 
position: relative; 
background-color: #fff;
 border-radius: 8px; 
}

.jf_head{border-bottom:1px solid #ebebeb; padding-bottom: 10px;}

.jf_icon{width:18px; margin:0 5px 0 0;display:inline-block;vertical-align: middle;}

.jf_icon2{width:16px; margin:0 5px 0 0;display:inline-block;vertical-align: middle;}

.jf_num{font-size: 30rpx; display: inline-block; vertical-align: middle; color: #d1121b;}

.jf_title{ font-size: 30rpx; text-align: center; padding: 8px; color: #b2b2b2; margin-top: 20px;}

 .jf_code{ text-align: center;} 

.jf_tip{ color: #fff; font-size: 28rpx; margin: 10px; }

.code-ad{width: 100%;}

.code-tip{margin:0 10px 10px 10px; color: #fff; font-size: 28rpx;}

/*这个一定要 要不然扫不出来*/
.barcode > canvas {
    width: 640rpx;
    height: 200rpx;
    margin: 0 auto; 
}

.z_modal{  
position: fixed;
top:0;
left:0;
right:0;
z-index:9999;
background: rgba(0, 0, 0, .7); width: 100%; height:335rpx;
}

.z_modal_close{ position: absolute; top: 20rpx; right: 20rpx; width: 50rpx; height: 50rpx; z-index: 99991;}

.z-title{ position: absolute; top:70rpx; left:70rpx; right: 70rpx; text-align: center; color: #fff; font-size: 36rpx; z-index: 99991; height: 200rpx;}

.z-frequency{position: absolute; bottom:30rpx; left: 30rpx; right: 30rpx; text-align: center; color: #fff; font-size: 40rpx;z-index: 99991}

.z-frequency font{ color: #ffe400; font-size: 56rpx; margin: 0 5px}

/*屏幕响应判断 iphone5 兼容 */
@media (max-width:330px){
  /*这个一定要 要不然扫不出来*/
.barcode > canvas {
    width: 640rpx;
    height: 200rpx;  
}
}

.modal_txt{
  word-wrap: break-word;
  white-space: pre-wrap;
}


