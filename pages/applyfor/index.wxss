/* pages/applyfor/index.wxss */
.appeal-type{padding:0 30rpx 30rpx 30rpx;}

.title{ font-size: 32rpx; padding: 20rpx 0; color: #d1121b}

.title2{ display: inline-block; vertical-align: middle; font-size: 32rpx;}

.type-option{ display:inline-block;
vertical-align:middle;
font-size:36rpx;
border:1px dashed #8d8d8d;
padding:48rpx 21rpx;
background-color:#fff;
border-radius:5px;

}

.type-option-act{background-color: #d1121b; color: #fff; border: 1px solid #d1121b;}

.appeal-content{padding:20rpx 30rpx;}

.appeal-asterisk{color: #d1121b;}

.appeal-input{display: inline-block; vertical-align: middle; width: 260rpx;  border-radius: 5px;border:1px solid #cbcbcb; background-color: #fff; font-size: 28rpx; padding:5rpx 10rpx;}

.value{margin-top: 20rpx;}

.city{display: inline-block; vertical-align: middle; font-size: 28rpx; color: #d1121b;}

.appeal-btn{margin: 100rpx 0 0 0; font-size: 30rpx; color: #fff; background-color: #d1121b; border-radius: 5px;}


/*加上的样式*/
.loading{font-size:14px; text-align:center; color:#999; padding:5px 0px 15px 0px; 
}



