/* pages/index/index.wxss */

.integral-page {
    position: fixed;
    width: 100vw;
    height: 100vh;
    background-color: #3686f3;
    background-size: cover;
    background-position: center top;
    display: flex;
    flex-direction: column;
}

.integral-page .tab-wrap {
    position: relative;
    width: 654rpx;
    height: 100rpx;
    margin-top: 10rpx;
    margin-left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: space-around;
}

.tab-wrap .line {
    position: absolute;
    width: 100%;
    height: 6rpx;
    background-color: #47394a;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
}

.tab-wrap .item {
    position: relative;
    width: 242rpx;
    z-index: 1;
}

.tab-wrap .item .img {
    position: absolute;
    top: 0;
    left: 0;
    width: 242rpx;
}

.integral-page .list-content {
    position: absolute;
    width: 654rpx;
    height: calc(100vh - 217rpx);
    top: 120rpx;
    left: 50%;
    transform: translateX(-50%);
    /* overflow: scroll; */
    /* -webkit-overflow-scrolling: touch; */
    animation: fade-animation .5s linear;
}

.list-content .item {
    width: 654rpx;
    height: 220rpx;
    background-size: 100% 100%;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.list-content .item .img {
    width: 275rpx;
    height: 158rpx;
    margin-top: -10rpx;
}

.list-content .item .info {
    flex: 1;
    margin-top: -10rpx;
    display: flex;
    flex-direction: column;
}

.list-content .item .info .num {
    width: 90%;
    margin-left: 10%;
    color: #504754;
    font-size: 38rpx;
    margin-bottom: 10rpx;
}

.num .green {
    display: inline;
    color: #00c335;
}

.list-content .item .info .time {
    width: 92%;
    margin-left: 5%;
    font-size: 28rpx;
    padding: 5rpx;
    text-align: center;
    color: #9c9c9c;
    background-color: #f3f3f3;
    border-radius: 110rpx;
    box-sizing: border-box;
}

.integral-page .logo {
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    width: 138rpx;
    height: 37rpx;
    margin: 30rpx 0;
}